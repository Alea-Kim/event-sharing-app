<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/aluminum</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/aluminum</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowBackground">@color/blue</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/iron</item>
        <item name="colorControlHighlight">@color/iron</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/base</item>
        <item name="android:colorButtonNormal">@color/base</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/iron</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/blue</item>
    </style>

</resources>
