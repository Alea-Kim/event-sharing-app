<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/profile_layout"
    android:layout_marginTop="5dp"
    android:paddingTop="30dp"
    android:orientation="vertical">

    <ImageView android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="102dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="false"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="EVENT ONE" />

    <TextView
        android:id = "@+id/tvdesc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more details>"
        android:layout_gravity="center_horizontal"
        android:textStyle ="bold"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="EVENT TWO" />

    <TextView
        android:id = "@+id/tvdesc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more details>"
        android:layout_gravity="center_horizontal"
        android:textStyle ="bold"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="EVENT THREE" />

    <TextView
        android:id = "@+id/tvdesc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more details>"
        android:layout_gravity="center_horizontal"
        android:textStyle ="bold"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="EVENT FOUR" />

    <TextView
        android:id = "@+id/tvdesc4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more details>"
        android:layout_gravity="center_horizontal"
        android:textStyle ="bold"
        android:layout_margin="20dp" />

